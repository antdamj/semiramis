<section class="section container">
                <form action="/reset" method="post">
                    <fieldset>
                        <legend>Forma za promjenu lozinke</legend>

                        <label for="password1">Nova lozinka:</label>
                        <input type="password" maxlength="20" minlength="8" id="password1" name="password1"><br>

                        <label for="password2">Potvrdi unos:</label>
                        <input type="password" maxlength="20" minlength="8" id="password2" name="password2"><br>
                        <br>
                        <input type="submit"> <input type="reset">
                        <br>
                        <% if (err !== undefined ) { %>
                        <p style="justify-content: center; color: red;"><%= err %></p>
                        <% } %>
                    </fieldset>
                </form>
            </section>