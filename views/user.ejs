<!DOCTYPE html>
<html>

<head>
    <title>AUTOS!</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/car-icon.png" />
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>

<body class="content">

    <script>
        function editDataForm() {
            var x = document.getElementById("form");
            if (x.style.display === "none") {
            x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }

        function del() {
            if (confirm('Jeste li sigurni da želite obrisati svoj korisnički račun?') == true) {
                //obrisi racun
                //document.getElementById("del-link").click();
                //odjava
                document.getElementById("logout-link").click();
            } else {
                //odustani
            }
            return 
        }
    </script>

    <%- include(`partials/header`); %>

    <main class="main">
        <section>
            <br>
            <div class="container" >
                <span class ="myDataPic">
                <div class="myData">
                <h1 class="h1User">Korisnički profil</h1>
                <h3 class="hUser">
                    KORISNIČKO IME: <%= user.korisnickoime %>
                </h3>
                <h3 class="hUser">
                    IME: <%= user.ime %>
                </h3>
                <h3 class="hUser">
                    PREZIME: <%= user.prezime %>
                </h3>
                <h3 class="hUser">
                    E-MAIL: <%= user.email %>
                </h3>
                </div>
                <div>
                    <img class="smallsvg" url="../images/user-img.png">
                </div>

                <button onclick="editDataForm()" class="btn">Uredi korisničke podatke</button>
                <section class="section container">
                    <form class="form-control" action="/user" method="post" id="form" style = "display: none;">
                        <fieldset>
                            <legend>Forma za promjenu korisničkih podataka</legend>
    
                            <label for="name">Ime:</label>
                            <input type="text" maxlength="20" minlength="1" id="name" name="name"><br>
    
                            <label for="lastname">Prezime:</label>
                            <input type="text" maxlength="20" minlength="1" id="lastname" name="lastname"><br>
    
                            <label for="email">E-mail:</label>
                            <input type="email" maxlength="30" minlength="1" id="email" name="email"><br>
                            <br>
                            <input type="submit"> <input type="reset">
                            <br>
                            <% if (err !== undefined ) { %>
                            <p style="justify-content: center; color: red;"><%= err %></p>
                            <% } %>
                        </fieldset>
                    </form>
                    <br><br>

                    <button name="delete" class="btn" value="true" onclick="del()">Obriši korisnički račun</button>

                    <!--<form action="/user" method="POST">
                        <input type="hidden" name="delete">
                        <input type="submit" value="delete">
                    </form> -->
                </section>
            </div>
            <br><br>

            <section class="section container">
                <form action="/user" method="post">
                    <fieldset>
                        <legend>Forma za promjenu lozinke</legend>

                        <label for="password">Trenutna lozinka:</label>
                        <input type="password" maxlength="20" minlength="8" id="password" name="password"><br>

                        <label for="password1">Nova lozinka:</label>
                        <input type="password" maxlength="20" minlength="8" id="password1" name="password1"><br>

                        <label for="password2">Potvrdi unos:</label>
                        <input type="password" maxlength="20" minlength="8" id="password2" name="password2"><br>
                        <br>
                        <input type="submit"> <input type="reset">
                        <br>
                        <% if (err !== undefined ) { %>
                        <p style="justify-content: center; color: red;"><%= err %></p>
                        <% } %>
                    </fieldset>
                </form>
                <br><br>
            </section>
        </section>
    </main>

</body>
<%- include(`partials/footer`); %>

</html>