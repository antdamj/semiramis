<!DOCTYPE html>
<html>

<head>
    <title>AUTOS!</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/car-icon.png" />
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>

<body class="content">

    <%- include(`partials/header`); %>

    <main class="main">
        <section class="section secondary-color-bg">
            <div class="container">
                <img class="scaled-image" src="images/cars.jpg" alt="Company jumbo image">
            </div>
        </section>

        <section class="section primary-color-bg">
            <div class="container">
                <div class="centered-container">
                    <div class="separator"></div>
                    <form action="/signup" method="post">
                        <fieldset>
                            <legend>Forma za registraciju</legend>

                            <label for="email">E-mail:</label>
                            <input type="email" name="email" id="email" maxlength="30" minlength="4"> <br>

                            <label for="firstname">Ime:</label>
                            <input type="text" name="firstName" id="firstname" maxlength="20" minlength="2"> <br>

                            <label for="lastname">Prezime:</label>
                            <input type="text" name="lastName" id="lastname" maxlength="20" minlength="2"> <br>

                            <br>
                            <label for="password1">Lozinka (1):</label>
                            <input type="password" maxlength="20" minlength="8" id="password1" name="password1"><br>

                            <label for="password2">Lozinka (2):</label>
                            <input type="password" maxlength="20" minlength="8" id="password2" name="password2"><br>
                            <br>

                            <label for="street">Ulica:</label>
                            <input type="text" maxlength="40" minlength="10" id="street" name="street"><br>

                            <br>
                            <label for="postcode">Poštanski broj:</label>
                            <input type="text" maxlength="40" minlength="5" id="postcode" name="postcode"><br>

                            <br>
                            <label for="city">Grad:</label>
                            <input type="text" maxlength="40" minlength="5" id="city" name="city"><br>

                            <br>
                            <label for="city">Država:</label>
                            <input type="text" maxlength="40" minlength="5" id="country" name="country"><br>

                            <br>
                            <input type="submit"> <input type="reset">
                            <br>
                            <% if (err !== undefined ) { %>
                            <p style="justify-content: center; color: red;"><%= err %></p>
                            <% } %>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="container">
                <div class="separator"></div>
            </div>
            <section class="section container">
                <div class="container-grid container-grid-halves">
                    <div class="news">
                        <h3 class="main-color font-secondary news-title "> Novo &amp; </h3>
                        <div class="infobox infobox-news">
                            <h4 class="infobox-title main-color-emphasized">
                                Najbolji automobili.
                            </h4>
                            <h5 class="infobox-subtitle main-color-emphasized">
                                January 1, 2021
                            </h5>
                            <p class="infobox-content">
                                
                            </p>
                            <a class="link infobox-link" href="#">Pročitaj više</a>
                        </div>
                        <div class="infobox infobox-calendar">
                            <h4 class="infobox-title main-color-emphasized">
                                Posebne ponude
                            </h4>
                            <h5 class="infobox-subtitle main-color-emphasized">
                                January 10, 2021
                            </h5>
                            <p class="infobox-content">
                                pročitajte više o posebnim ponudama koje smo pripremili za Vas
                            </p>
                            <a class="link infobox-link" href="#">Pročitajte više</a>
                        </div>
                    </div>
                    <div class="vertical-center">
                        <img class="scaled-image" src="images/limo.jpg" alt="Limuzina">
                    </div>


                </div>
            </section>
            <div class="separator"></div>
        </section>
    </main>

    <%- include(`partials/footer`); %>

</body>

</html>